<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".Jogo">

    <LinearLayout
        android:id="@+id/buttonWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt1"
            android:background="#008000"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/bt2"
            android:background="#FF0000"
            android:layout_width="0dp"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:text="2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonWraper"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonWrapper"

        android:orientation="horizontal">

        <Button
            android:id="@+id/bt3"
            android:background="#0000FF"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="5dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:id="@+id/bt4"
            android:background="#FFCC00"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:text="4" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="96dp"
        android:layout_marginStart="55dp"
        android:text="Numero de Vidas: " />

    <TextView
        android:id="@+id/tvVida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:text="0" />

    <Button
        android:id="@+id/btStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginEnd="54dp"

        android:text="Iniciar jogo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Jogando a fase: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/btStart"
        android:text="PontuacÃ£o: " />

    <TextView
        android:id="@+id/tvPontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btStart"
        android:layout_toEndOf="@+id/textView9"
        android:text="0" />

    <TextView
        android:id="@+id/tvFaseAtual"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView8"
        android:text="1"
        android:textSize="20dp" />

</RelativeLayout>